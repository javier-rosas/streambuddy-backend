{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".", // This sets the base directory for non-relative module names
    "paths": {
      "@/types/*": ["types/*"],
      "@/controllers/*": ["controllers/*"],
      "@/middleware/*": ["middleware/*"],
      "@/mongoose/*": ["mongoose/*"],
      "@/utils/*": ["utils/*"],
      "@/daos/*": ["daos/*"],
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
